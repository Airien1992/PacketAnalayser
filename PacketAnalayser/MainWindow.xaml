<Window x:Class="PacketAnalayser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PacketAnalayser"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="Sniffer" Name="SnifferTb">
                <Grid>
                    <TabControl TabStripPlacement="Left">
                        <TabItem Header="ARP" Name="ARPTb">
                            <StackPanel Name="ARPPaketten">
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="IPv4" Name="IPv4Tb">
                            <StackPanel Name="IPv4Paketten">
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="IPv6" Name="IPv6Tb">
                            <StackPanel Name="IPv6Paketten">
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </Grid>

            </TabItem>
            <TabItem Header="Packet Aanmaken" Name="PATb"/>
            <TabItem Header="Packet injectie" Name="PITb" />
        </TabControl>
    </Grid>

</Window>
